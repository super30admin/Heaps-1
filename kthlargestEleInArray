//tc: O(nlogn)
//sc: O(k)
//passed on leetcode: yes
class Solution {
    public int findKthLargest(int[] nums, int k) {
        PriorityQueue<Integer> pq = new PriorityQueue<>();
        for (int n:nums){
            pq.add(n);
            if (pq.size()>k){ //maintaining the size of queue as k
                pq.poll();
            }
        }
        return pq.peek();
    }
}
